<div class="wrapper">
  <div class="content">
    <div class="container">
      <div class='row justify-content-center'>
        <div class='col-xs-12 col-sm-6'>
          <div class='form-login'>
          <h2>Sign up</h2>
          <h5>Choose a role</h5>
          <div class="user-roles" >
            <div id="student" onclick="setRoleToTeacher('student')">
            <i class="fas fa-user-graduate"></i>
             Student
            </div>
            <div id="teacher" onclick="setRoleToTeacher('teacher')">
            <i class="fas fa-chalkboard-teacher"></i>
            Teacher
            </div>
          </div>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">

              <%= f.input :name,
                          label: 'Full name',
                          required: true,
                          autofocus: true %>                      
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email" }%>
              <%= f.input :password,
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" } %>
              <%= f.input :password_confirmation,
                          required: true,
                          input_html: { autocomplete: "new-password" } %>
              <%= f.input :teacher,
                          as: :hidden,
                          required: true %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Sign up", class: 'btn btn-primary' %>
            </div>
          <% end %>
                      <% if @user.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
          

          <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const setRoleToTeacher = (role => {
    const roleDiv = document.querySelector(`#${role}`);
    const otherRole = role === 'teacher' ? 'student' : 'teacher';
    otherRoleDiv = document.querySelector(`#${otherRole}`);
    if (otherRoleDiv.classList.contains('selected')) {
      otherRoleDiv.classList.toggle('selected');
    }
    roleDiv.classList.toggle('selected');
    const teacherInput = document.querySelector('#user_teacher');
    teacherInput.value = role === 'teacher'
    console.log(teacherInput);
  });

</script>